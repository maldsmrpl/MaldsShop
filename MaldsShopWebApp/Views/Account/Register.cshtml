@using MaldsShopWebApp.ViewModels
@model RegisterViewModel

@{
	ViewData["Title"] = "Sign up";
}

<form asp-action="Register">
	<eldset control-id="ControlID-9">
		<br />
		<legend>Create new account</legend>

		@if (TempData["Error"] != null)
		{
			<div class="col-md-12 alert alert-danger">
				<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
				<span><strong>Sorry!</strong> - @TempData["Error"]</span>
			</div>
		}

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class ="form-group">
			<label asp-for="EmailAddress" class="form-label mt-4"></label>
			<input asp-for="EmailAddress" type="email" aria-describedby="emailHelp" placeholder="Enter email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" control-id="ControlID-11">
			<span asp-validation-for="EmailAddress" class="text-danger"></span>
			<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
		</div>
		<div class ="form-group">
			<label asp-for="Password" class="form-label mt-4"></label>
			<input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" autocomplete="off" control-id="ControlID-12">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<divclass ="form-group">
			<label asp-for="ConfirmPassword" class="form-label mt-4"></label>
			<input asp-for="ConfirmPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password" autocomplete="off" control-id="ControlID-12">
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</divclass>
		<br />
		<divclass ="form-group">
			<br />
			<a type="button" class="btn btn-outline-primary" control-id="ControlID-69" asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
			<input type="submit" class="btn btn-primary" value="Create new account" control-id="ControlID-49"></input>
		</divclass>
</form>