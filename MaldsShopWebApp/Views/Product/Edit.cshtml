@using MaldsShopWebApp.ViewModels
@model EditProductViewModel

@{
    bool isAuthenticated = User.Identity?.IsAuthenticated == true;
}

@{
    ViewData["Title"] = Model.Title + "Edit";
}

<h2>
    <button type="button" class="btn btn-outline-primary" onclick="history.back();">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
        </svg> Go Back
    </button>
    Edit product
</h2>

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Title" />
                <input asp-for="ImageUrl" type="hidden" value="@Model.ImageUrl" id="ImageUrl" />
            </div>

            <div class="col-md-6">
                <div class="row mb-2">
                    <label class="col-sm-4 col-form-label">Product ID</label>
                    <div class="col-sm-8">
                        <input type="text" readonly class="form-control-plaintext" value="@Model.ProductId">
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-sm-4 col-form-label">Title</label>
                    <div class="col-sm-8">
                        <input asp-for="Title" class="form-control" placeholder="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-sm-4 col-form-label">Description</label>
                    <div class="col-sm-8">
                        <textarea rows="3" asp-for="Description" class="form-control" placeholder="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-sm-4 col-form-label">In Stock</label>
                    <div class="col-sm-8">
                        <input asp-for="InStock" class="form-control" placeholder="InStock">
                        <span asp-validation-for="InStock" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-sm-4 col-form-label">Price</label>
                    <div class="col-sm-8">
                        <input asp-for="Price" class="form-control" placeholder="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-sm-4 col-form-label">Product image</label>
                    <div class="col-sm-8">
                        <input asp-for="Image" class="form-control" type="file" id="formFile">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="button" class="btn btn-outline-primary" onclick="history.back();">
                        Go Back
                    </button>
                    <button type="submit" class="btn btn-outline-danger">
                        Edit product
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
