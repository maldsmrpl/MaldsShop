@model ReviewViewModel

<h2>Delete Review</h2>

<h3>Are you sure you want to delete this review?</h3>
<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewScore)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewScore)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ReviewId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-light" })
    </form>
</div>