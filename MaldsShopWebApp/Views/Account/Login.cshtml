@using MaldsShopWebApp.ViewModels
@model LoginViewModel

@{
	ViewData["Title"] = "Login";
}


<form asp-action="Login">
	<eldset control-id="ControlID-9" class="row">
		<br />
		<legend>Login to your account</legend>
		@if (TempData["Error"] != null)
		{
			<div class="alert alert-dismissible alert-danger">
				<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
				<span><strong>Sorry!</strong> - @TempData["Error"]</span>
			</div>
		}
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="EmailAddress" class="control-label"></label>
			<input asp-for="EmailAddress" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" control-id="ControlID-11">
			<span asp-validation-for="EmailAddress" class="text-danger"></span>
			<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
		</div>
		<div class="form-group">
			<label asp-for="Password" class="control-label"></label>
			<input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password" autocomplete="off" control-id="ControlID-12">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<br />
		<div class="form-group">
			<br />
			<a type="button" class="btn btn-outline-primary" control-id="ControlID-69" asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
			<input type="submit" class="btn btn-primary" value="Login to your account" control-id="ControlID-49"></input>
		</div>
</form>