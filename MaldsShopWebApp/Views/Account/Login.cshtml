@using MaldsShopWebApp.ViewModels
@model LoginViewModel

@{
	ViewData["Title"] = "Login";
}

<br />
<form asp-action="Login">
	<eldset control-id="ControlID-9" class="row">
		<br />
		<legend>Login to your account</legend>
		@if (TempData["Error"] != null)
		{
			<div class="alert alert-dismissible alert-danger">
				<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
				<span><strong>Sorry!</strong> - @TempData["Error"]</span>
			</div>
		}
		<div asp-validation-summary="ModelOnly"></div>
		<div class ="form-group">
			<div class="form-floating mb-3">
				<input asp-for="EmailAddress" type="email" class="form-control" id="floatingInput" placeholder="Email" control-id="ControlID-45">
				<label asp-for="EmailAddress"></label>
				<span asp-validation-for="EmailAddress" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" autocomplete="off" control-id="ControlID-46">
				<label asp-for="Password"></label>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group">
				<br />
				<a type="button" class="btn btn-outline-primary" control-id="ControlID-69" asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
				<input type="submit" class="btn btn-primary" value="Login to your account" control-id="ControlID-49"></input>
			</div>
		</div>

</form>